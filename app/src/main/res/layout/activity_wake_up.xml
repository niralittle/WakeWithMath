<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="theano.wakeupwithmath.WakeUp">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:text="@string/dummy_content" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:id="@+id/my_frame">


        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>

        <EditText
            android:layout_width="200dp"
            android:layout_height="81dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/result"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:textSize="40sp"
            android:background="@drawable/abc_textfield_search_material"
            android:textStyle="bold"
            android:layout_gravity="right|top" />

        <Button android:id="@+id/dummy_button" style="?metaButtonBarButtonStyle"
            android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:text="@string/solved_button"
            android:onClick="checkInput"
            android:layout_gravity="left|top" />

        <TextView
            android:layout_width="186dp"
            android:layout_height="84dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/task"
            android:textSize="40sp"
            android:textColor="#ffffffff"
            android:layout_column="0"
            android:textAlignment="center"
            android:layout_weight="0.5"
            android:layout_gravity="left|top"
            android:textStyle="bold" />

        <Button
            android:layout_width="256dp"
            android:layout_height="155dp"
            android:text="@string/check_button"
            android:id="@+id/check"
            android:background="@drawable/oval_button"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_column="0"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textColor="#ffffffff"
            android:textSize="30sp"
            android:backgroundTint="#ff2022ab"
            android:textStyle="bold" />

        <TextView
            android:layout_width="281dp"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/answer"
            android:layout_column="0"
            android:textColor="#ffffffff"
            android:textSize="50sp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_gravity="center" />

    </FrameLayout>

</FrameLayout>
